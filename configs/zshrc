export TERM="xterm-256color"
export ZSH=$HOME/.oh-my-zsh/
ZSH_THEME=eastwood
ZSH_THEME_RANDOM_CANDIDATES=(eastwood nanotech terminalparty)
plugins=(git)
source $ZSH/oh-my-zsh.sh

alias lav="la -v"
alias lag="la --group-directories-first"

alias escmap='setxkbmap -option caps:escape'
alias groot='cd $(git rev-parse --show-toplevel)'
alias open='xdg-open'
alias rall='cd ~/Documents/repositories/'
alias rdot='cd ~/Documents/repositories/dot-files'
alias vim='escmap; vim'
alias vimide='escmap; vim -c "NERDTree | wincmd w"'
alias xclip='xclip -selection clipboard'

musgrep() { grep -i $1 ~/Music/tracking/* }
vidgrep() { grep -i $1 ~/Videos/tracking/* }

gsdel() {
	if [[ -z $1 ]]; then
		echo "Submodule name not provided"
	else
		gspath=$(git submodule status | awk '{ print $2 }' | grep $1 | head -1)
		git submodule deinit --force -- $gspath
		rm -rf .git/modules/$gspath
		git rm -rf $gspath
		git commit -am "remove submodule $gspath"
	fi
}

gsup() {
	if [[ $(git submodule update --recursive --remote) ]]; then
		git commit -am "update submodules to upstream"
	fi
}

pkgup() {
	if [[ `uname` == "Linux" ]]; then
		sudo apt update
		sudo apt upgrade
		sudo apt full-upgrade
		sudo apt autoclean
		sudo apt autoremove
		pip3 install --upgrade youtube-dl
	else
		echo "Operating system not supported"
	fi
}

tland() {
	if [[ $1 == "--reverse" ]]; then
		tmux split-window -t 0.0 -h -p 60
		tmux split-window -t 0.0 -v
		tmux resize-pane -t 0.0 -y 8
		tmux send-keys -t 0.0 "sleep 2.50 && htop -d 5" C-m
		tmux send-keys -t 0.1 "sleep 2.50 && cmus" C-m
		tmux send-keys -t 0.2 "sleep 0.25 && vim -c q && clear" C-m
		tmux select-pane -t 2
	else
		tmux split-window -t 0.0 -h -p 40
		tmux split-window -t 0.1 -v
		tmux resize-pane -t 0.1 -y 8
		tmux send-keys -t 0.0 "sleep 0.25 && vim -c q && clear" C-m
		tmux send-keys -t 0.1 "sleep 2.50 && htop -d 5" C-m
		tmux send-keys -t 0.2 "sleep 2.50 && cmus" C-m
		tmux select-pane -t 0
	fi
}

tport() {
	tmux split-window -t 0.0 -v
	tmux resize-pane -t 0.0 -y 8
	tmux new-window
	tmux send-keys -t 0.0 "sleep 2.50 && htop -d 5" C-m
	tmux send-keys -t 0.1 "sleep 2.50 && cmus" C-m
	tmux send-keys -t 1.0 "sleep 0.25 && vim -c q && clear" C-m
}

