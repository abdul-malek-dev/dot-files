call plug#begin('~/.vim/plugged')
Plug 'vim-airline/vim-airline'			,{'as':'airline'}
Plug 'ryanoasis/vim-devicons'			,{'as':'devicons'}
Plug 'tpope/vim-fugitive'				,{'as':'fugitive'}
Plug 'airblade/vim-gitgutter'			,{'as':'gitgutter'}
Plug 'morhetz/gruvbox'					,{'as':'gruvbox'}
Plug 'preservim/nerdtree'				,{'as':'nerdtree'}
Plug 'edkolev/tmuxline.vim'				,{'as':'tmuxline'}
call plug#end()

let g:airline_powerline_fonts=1
let g:airline_theme='dark'
let g:airline#extensions#tabline#enabled = 1
let g:NERDTreeMinimalUI=1

colorscheme gruvbox
set background=dark
set term=xterm-256color

filetype indent on
filetype plugin on
syntax enable

" WIP ===========================================================================================
set number
"set relativenumber

set autoindent
set noexpandtab " important to decide later
set nowrap
set smartindent
set splitbelow
set splitright
set textwidth=100

"set timeout=1000
"set ttimeout=1000
"set timeoutlen=1000
set ttimeoutlen=100
set updatetime=100

" TENTATIVE
set ignorecase
set smartcase
set ttymouse=xterm2
set backspace=2
set colorcolumn=+1
set cursorline
set hlsearch
set incsearch
set laststatus=2
set mouse=a
set ruler
set showcmd
set wildmenu
set shiftwidth=4
set softtabstop=4
set tabstop=4

highlight Normal				ctermbg=None
highlight SignColumn			ctermbg=None
highlight GitGutterAdd			ctermbg=None
highlight GitGutterDelete		ctermbg=None
highlight GitGutterChange		ctermbg=None
highlight GitGutterChangeDelete ctermbg=None
